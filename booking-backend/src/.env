MONGO_URI=mongodb://localhost:27017/booking_portal
PORT=5000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Mapbox Configuration (for distance and directions)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Session (if using sessions)
SESSION_SECRET=your_session_secret

# Email Configuration (if sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# File Uploads (if handling file uploads)
MAX_FILE_UPLOAD=5 # in MB
FILE_UPLOAD_PATH=./public/uploads

# Payment Gateway (if integrating payments)
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_SECRET=your_razorpay_secret

# Cache Configuration (if using caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour
